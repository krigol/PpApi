<body>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand visible-xs" href="~/">BeerPal Brewery</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav nav-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Sales")">Sales</a></li>
                            <li><a href="@Url.Action("Index", "Subscribers")">Subscribers</a></li>
                            <li><a href="@Url.Action("Index", "WebhookEvents")">Webhook Events</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "WebExperienceProfiles")">Web Experience Profiles</a></li>
                            <li><a href="@Url.Action("Index", "BillingPlans")">Billing Plans</a></li>
                            <li><a href="@Url.Action("Index", "Webhooks")">Webhooks</a></li>
                        </ul>
                    </li>
                </ul>
                <a href="~/" class="logo visible-lg visible-md"><img src="~/public/img/beer-glass.png" alt="dodolan manuk responsive catalog themes"></a>
                <div id="brand" class="visible-lg visible-md">&nbsp;</div>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    @RenderBody()

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/public/js/jquery.js"></script>
    <script src="~/public/js/bootstrap.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;language=en"></script>
    <script src="~/public/js/gmap3.js"></script>
    <script src="~/public/js/script.js"></script>

</body>
</html>